							"filter = {",
							"    \"Id\": [{\"Value\": findings_id, \"Comparison\": \"EQUALS\"}],",
							"}",
							"",
							"",
							"filter = {\"Filters\": filter, \"RecordState\": \"ARCHIVED\", \"Note\": { ",
							"      \"Text\": note,",
							"      \"UpdatedBy\": \"postman-splunk\"",
							"   },",
							"   }",
							"pm.collectionVariables.set(\"filter\", JSON.stringify(filter));",
							""
